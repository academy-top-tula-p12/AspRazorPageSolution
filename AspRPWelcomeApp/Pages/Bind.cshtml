@page
@model BindModel
@{
}

<form method="post">
    <div>
        <label>Name:</label><br />
        <input type="text" name="Name" />
    </div>

    <div>
        <label>Age:</label><br />
        <input type="number" name="Age" />
    </div>

    <dib>
        <input type="submit" value="Send" />
    </dib>
</form>

@if(Request.Method == "POST")
{
    <h3>Forms:</h3>
    <h4>@Model.Person.Name</h4>
    <h4>@Model.Person.Age</h4>
}

@if (Request.Method == "GET")
{
    <h3>Query:</h3>
    <h4>@Model.Person.Name</h4>
    <h4>@Model.Person.Age</h4>
}